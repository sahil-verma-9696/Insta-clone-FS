<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <title>Profile</title>
</head>

<body class="flex justify-center items-center">
    <div class="page w-1/4 h-screen flex flex-col">
        <section class="one w-full">
            <nav class="flex  py-3 justify-between items-center">
                <div class="w-4/5">
                    <h1 class="logo text-center text-3xl">Instagram</h1>
                </div>
                <div class="w-11 flex flex-col gap-1.5 items-center">
                    <div class="w-9/12 h-1 rounded-md bg-black"></div>
                    <div class="w-9/12 h-1 rounded-md bg-black"></div>
                    <div class="w-9/12 h-1 rounded-md bg-black"></div>
                </div>
            </nav>
            <section class="w-full py-3">
                <div class="flex items-center justify-between">
                    <div
                        class="w-24 h-24 bg-gradient-to-tr from-yellow-400 to-fuchsia-600 rounded-full flex justify-center items-center">
                        <img class=" dp rounded-full object-cover"
                            src="<%= user.imgAddress%>"
                            alt="">
                    </div>
                    <div>
                        <h1 class="text-center font-semibold">123</h1> <span class="text-black">Posts</span>
                    </div>
                    <div>
                        <h1 class="text-center font-semibold">123</h1> <span class="text-black">Followers</span>
                    </div>
                    <div>
                        <h1 class="text-center font-semibold">123</h1> <span class="text-black">Following</span>
                    </div>
                </div>
                <div></div>
                <div></div>
            </section>
            <section class="py-3 w-full">
                <h2 class="font-semibold"><%= user.name%> </h2>
                <p class="bio">hii am sahil verma felling</p>

                <a href="/updateprofile"
                    class="editprofile text-center font-semibold w-full border-2 border-zinc-400 rounded-md"> Edit
                    Profile</a>
            </section>
        </section>
        <section class="two w-full ">
            <div class="highlights w-full flex gap-3 px-4 py-4">
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
                <div class="border-2 min-w-20 min-h-20 rounded-full"></div>
            </div>

            <div class="gallery w-full flex flex-wrap gap-1 px-1">
                <%if(user.posts.length > 0){%>
                        <%user.posts.forEach(post=>{%>
                            <img src="<%= post.img%>" alt="">
                            <%})%>
                    <%}else{%>
                        <h2> not posts found</h2>
                        <%}%>
            </div>
        </section>
        <section class="three w-full flex justify-between px-4">
            <a href="/dashboard">
                <svg xmlns="http://www.w3.org/2000/svg" height="40px" viewBox="0 -960 960 960" width="40px"
                    fill="#5f6368">
                    <path
                        d="M226.67-186.67h140v-246.66h226.66v246.66h140v-380L480-756.67l-253.33 190v380ZM160-120v-480l320-240 320 240v480H526.67v-246.67h-93.34V-120H160Zm320-352Z" />
                </svg>
            </a>
            <a href="">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" height="40px" viewBox="0 -960 960 960" width="40px"
                        fill="#5f6368">
                        <path
                            d="M792-120.67 532.67-380q-30 25.33-69.64 39.67Q423.39-326 378.67-326q-108.44 0-183.56-75.17Q120-476.33 120-583.33t75.17-182.17q75.16-75.17 182.5-75.17 107.33 0 182.16 75.17 74.84 75.17 74.84 182.27 0 43.23-14 82.9-14 39.66-40.67 73l260 258.66-48 48Zm-414-272q79.17 0 134.58-55.83Q568-504.33 568-583.33q0-79-55.42-134.84Q457.17-774 378-774q-79.72 0-135.53 55.83-55.8 55.84-55.8 134.84t55.8 134.83q55.81 55.83 135.53 55.83Z" />
                    </svg>
                </div>
            </a>
            <a href="/createpost">
                <svg xmlns="http://www.w3.org/2000/svg" height="40px" viewBox="0 -960 960 960" width="40px"
                    fill="#5f6368">
                    <path
                        d="M448.67-280h66.66v-164H680v-66.67H515.33V-680h-66.66v169.33H280V-444h168.67v164Zm31.51 200q-82.83 0-155.67-31.5-72.84-31.5-127.18-85.83Q143-251.67 111.5-324.56T80-480.33q0-82.88 31.5-155.78Q143-709 197.33-763q54.34-54 127.23-85.5T480.33-880q82.88 0 155.78 31.5Q709-817 763-763t85.5 127Q880-563 880-480.18q0 82.83-31.5 155.67Q817-251.67 763-197.46q-54 54.21-127 85.84Q563-80 480.18-80Zm.15-66.67q139 0 236-97.33t97-236.33q0-139-96.87-236-96.88-97-236.46-97-138.67 0-236 96.87-97.33 96.88-97.33 236.46 0 138.67 97.33 236 97.33 97.33 236.33 97.33ZM480-480Z" />
                </svg>
            </a>
            <a href="/profile/<%= user._id%>" class="profileicon">
                <img src="<%= user.imgAddress%>" alt="" srcset="">
            </a>
        </section>
    </div>
</body>
<script>
    const scrollContainer = document.querySelector('.highlights');
    console.log(scrollContainer)
    scrollContainer.addEventListener('wheel', (event) => {
        event.preventDefault(); // Prevent the default vertical scroll
        scrollContainer.scrollLeft += event.deltaY; // Scroll horizontally
    });
</script>

</html>